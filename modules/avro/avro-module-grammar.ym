%code requires {

#include "avro-module-parser.h"

}

%code {

#include "cfg-grammar.h"
#include "avro-module-grammar.h"
#include "plugin.h"
#include "vptransform.h"

}

%name-prefix "avro_mod_"
%lex-param {CfgLexer *lexer}
%parse-param {CfgLexer *lexer}
%parse-param {LogDriver **instance}
%parse-param {gpointer arg}

/* INCLUDE_DECLS */

%token KW_AVRO
%token KW_AVRO_STAMP

%%

start
        : LL_CONTEXT_DESTINATION KW_AVRO
          {
            last_driver = *instance = avro_mod_dd_new(configuration);
          }
          '(' avro_mod_file avro_mod_options ')'         { YYACCEPT; }
	;

avro_mod_options
	: avro_mod_option avro_mod_options
	|
	;

avro_mod_option
	: KW_AVRO_STAMP '(' template_content ')' { avro_mod_dd_set_timestamp(last_driver, $3); }
	|  { last_template_options = avro_mod_dd_get_template_options(last_driver); } template_option
	;


avro_mod_file
        : template_content  { avro_mod_dd_set_destination_file(last_driver, $1);}
         ;

/* INCLUDE_RULES */

%%
